<h2>Update Song!</h2>
<br>

<form action="/songs/<%= @song.slug %>" method="POST">
  <label for="artist_name">Artist Name</label>
  <input type="hidden" id="hidden" name="_method" value="patch">
  <br>
  <input type="text" id="Artist Name" name="artist[name]" value="<%= @song.artist.name %>">
  <br>
  <label for="song_name">Song Name</label>
  <br>
  <input type="text" id="Name" name="song[name]" value="<%= @song.name %>">
  <br>
  <label>Genre:</label>
  <br>
  <% @genres.each do |genre| %>
  <%= genre.name %>
  <input id="<%= genre.name %>" type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" <%= "checked" if @song.genres.include?(genre) %>>
<% end %>
  <br>
  <input type="submit" value="Save">
</form>